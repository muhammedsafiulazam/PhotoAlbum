<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdlTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/view_margin_small" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdlBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/view_margin_small" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdlLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/view_margin_small" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdlRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/view_margin_small" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/album_imv_cover"
        android:layout_width="@dimen/albumlist_album_imv_size"
        android:layout_height="@dimen/albumlist_album_imv_size"
        android:background="@android:color/darker_gray"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gdlBottom"
        app:layout_constraintEnd_toStartOf="@+id/gdlRight"
        app:layout_constraintStart_toStartOf="@+id/gdlLeft"
        app:layout_constraintTop_toTopOf="@+id/gdlTop" />

    <ProgressBar
        android:id="@+id/album_pgb_loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/albumlist_album_pgb_size"
        android:layout_height="@dimen/albumlist_album_pgb_size"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/gdlBottom"
        app:layout_constraintEnd_toStartOf="@+id/gdlRight"
        app:layout_constraintStart_toStartOf="@+id/gdlLeft"
        app:layout_constraintTop_toTopOf="@+id/gdlTop" />

</androidx.constraintlayout.widget.ConstraintLayout>
